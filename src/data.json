{
  "eslint": {
    "files": [
      { "file": ".eslintrc.json", "url": "../content/eslint/.eslintrc.json" }
    ],
    "devDependencies": ["eslint", "eslint-plugin-import"],
    "integrations": [
      {
        "integration": ["prettier"],
        "overridesJSON": [
          {
            "file": ".eslintrc.json",
            "changes": [
              {
                "type": "Array",
                "key": "plugins",
                "modifier": { "add": "prettier" }
              },
              {
                "type": "Object",
                "key": "rules",
                "modifier": { "set": { "prettier/prettier": "error" } }
              }
            ]
          }
        ],
        "template": {
          "devDependencies": ["eslint-plugin-prettier"]
        }
      },
      {
        "integration": ["typescript"],
        "template": {
          "devDependencies": [
            "@typescript-eslint/eslint-plugin",
            "@typescript-eslint/parser"
          ]
        }
      }
    ]
  },
  "prettier": {
    "files": [{ "file": ".prettierrc" }],
    "devDependencies": ["prettier"]
  },
  "git": { "files": [{ "file": ".gitignore" }] },
  "github": {
    "files": [
      { "file": ".github/ISSUE_TEMPLATE/bug_report.md" },
      { "file": ".github/ISSUE_TEMPLATE/feature_request.md" },
      { "file": ".github/PULL_REQUEST_TEMPLATE.md" }
    ],
    "extensions": {
      "workflows": { "files": [{ "file": ".github/workflows/ci.yml" }] }
    }
  },
  "typescript": {
    "devDependencies": ["typescript"],
    "commands": ["npx tsc --init"]
  }
}
