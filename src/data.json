{
  "eslint": {
    "dependencies": [],
    "devDependencies": ["eslint", "eslint-plugin-import"],
    "files": [
      {
        "file": ".eslintrc.json",
        "url": "../content/eslint/.eslintrc.json",
        "override": true
      }
    ],
    "integrations": [
      {
        "integration": ["prettier"],
        "template": {
          "dependencies": [],
          "devDependencies": ["eslint-plugin-prettier"]
        },
        "overridesJSON": [
          {
            "file": ".eslintrc.json",
            "changes": [
              {
                "type": "Array",
                "key": "plugins",
                "modifier": { "add": "prettier" }
              },
              {
                "type": "Object",
                "key": "rules",
                "modifier": { "set": { "prettier/prettier": "error" } }
              }
            ]
          }
        ]
      },
      {
        "integration": ["typescript"],
        "template": {
          "dependencies": [],
          "devDependencies": [
            "@typescript-eslint/eslint-plugin",
            "@typescript-eslint/parser"
          ]
        }
      }
    ]
  },
  "prettier": {
    "dependencies": [],
    "devDependencies": ["prettier"],
    "files": [{ "file": ".prettierrc", "override": false }]
  },
  "git": {
    "dependencies": [],
    "devDependencies": ["prettier"],
    "files": [{ "file": ".gitignore", "override": false }]
  },
  "github": {
    "dependencies": [],
    "devDependencies": ["prettier"],
    "files": [
      { "file": ".github/ISSUE_TEMPLATE/bug_report.md", "override": false },
      {
        "file": ".github/ISSUE_TEMPLATE/feature_request.md",
        "override": false
      },
      { "file": ".github/PULL_REQUEST_TEMPLATE.md", "override": false }
    ],
    "extensions": {
      "workflows": {
        "default": false,
        "template": {
          "dependencies": [],
          "devDependencies": ["prettier"],
          "files": [{ "file": ".github/workflows/ci.yml", "override": true }]
        }
      }
    }
  },
  "typescript": {
    "dependencies": [],
    "devDependencies": ["typescript"],
    "files": [
      {
        "file": "tsconfig.json",
        "commands": ["npx tsc --init"],
        "override": false
      }
    ]
  }
}
